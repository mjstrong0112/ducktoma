%h1 Users
= will_paginate @users
%table
  %tr
    %th Email
    %th Adoptions count
    %th Total donated
    %th Actions
  - @users.each do |user|
    %tr
    %td= user.email
    %td= user.adoptions.count
    %td $#{dollar_fee user.fee}
    %td= link_to "Edit", edit_admin_user_path(user)
= will_paginate @users

- content_for :navlinks do
  .navlink= link_to "Create a new user", new_admin_user_path
  .navlink= link_to "Admin Dashboard", admin_root_path
