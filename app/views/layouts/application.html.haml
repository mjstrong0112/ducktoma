!!!
%html
  %head
    %title Ducktoma
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = csrf_meta_tag
  %body
    /#distance    
    .wrapper
      #clouds
      #container
        = render 'shared/header'
        
        #main
          = image_tag "logo.png", :id => "logo", :alt => "ducktoma"
          .clear &nbsp;
          %div(style="margin-top: -25px;")
            - if notice
              .flash.notice= notice
            - if alert
              .flash.alert= alert

            = yield

      .push
    = render 'shared/footer'
    = render 'shared/javascripts'
    