!!!
%html
  %head
    %title Ducktoma
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = csrf_meta_tag
  %body
    /#distance    
    .wrapper
      #clouds
      #container
        = render 'shared/header'

        #sidebar-left
          /#sponsors-title= image_tag "sponsors.png", :alt => "sponsors"
          = image_tag "etherpros.png", :id => "etherpros-logo", :alt => "Etherpros"
                  
        #main
          = image_tag "logo.png", :id => "logo", :alt => "ducktoma"
          .clear &nbsp;
          %div(style="margin-top: -10px;")                                    
            - if notice
              .flash.notice= notice
            - if alert
              .flash.alert= alert

            = yield

        #sidebar
          /#sponsors-title= image_tag "sponsors.png", :alt => "sponsors"
          = image_tag "heblogo.png", :id => "heb-logo", :alt => "HEB"
             
        .clear &nbsp;
      .push
    = render 'shared/footer'
    = render 'shared/javascripts'
    