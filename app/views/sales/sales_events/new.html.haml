.form
  %h2.sales-adoption-form-title= @reassignation ? 'Reassign Adoptions' : 'Sales Event Information'
  = simple_form_for [:sales, @sales_event] do |f|
    - if @reassignation
      = hidden_field_tag :adoption_numbers, @adoption_numbers
    #new-sales-event
      .left
        %h4 Location
        = f.input :location_id, :collection => Location.to_collection, :label => false
      .left(style="margin-left: 10px;")
        %h4 Organization
        = f.input :organization_id, :collection => Organization.to_collection , :label => false
      .clear
      %br/
      %div(style="text-align: center;")
        %h4 Sales Event Date
        = f.input :date, :label => false, :input_html => { :style => "width: 130px;" }, :as => :string
      .adoption-new-button
        = f.submit "Continue", :class => "submit-duck-button blue-button"

- content_for :javascripts do
  = stylesheet_link_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/redmond/jquery-ui.css"
  :javascript
      $(function() {
        $("#sales_event_date").datepicker({dateFormat: 'mm-dd-yy'});      
      });
