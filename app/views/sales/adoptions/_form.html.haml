= render 'shared/title_slim', :text => 'Personal Information', :number => 1
= form_for @adoption do |f|
  .sales-adoption-form
    .left
      Name: <br/>
      = text_field_tag 'name'
      %br/
      Phone: <br/>
      = text_field_tag 'phone'
      %br/
      Email: <br/>
      = text_field_tag 'email'
    .right
      Address: <br/>
      = text_field_tag 'address'
      %br/
      City: <br/>
      = text_field_tag 'city'
      %br/
      .left
        State: <br/>
        = text_field_tag 'state', '', :style => "width: 195px;"
      .left(style="padding-left: 10px;")
        Zip: <br/>
        = text_field_tag 'zip', '', :style => "width: 50px;"
      %br/
    .break &nbsp;

  = render 'shared/title_slim', :text => 'Number of Ducks', :number => 3

  .sales-adoption-form-ducks
    .left(style="padding: 0;")
      Lone Ducks: <br/>
      = text_field_tag 'lone'
    .left
      Family of Ducks: <br/>
      = text_field_tag 'family'
    .left
      Flock: <br/>
      = text_field_tag 'flock'
    .left
      OODLES: <br/>
      = text_field_tag 'oodles'

    .break &nbsp;

  #submit-sales.blue-button
    Submit