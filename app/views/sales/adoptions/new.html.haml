-#.title
  = image_tag "adopt.png", :id => "adopt", :alt => "Adopt a Duck Now!"
  %h1 Adopt a Duck Now!

-#.form
  .header
    = image_tag "no1.gif", :class => "number"
    Specify Number of Ducks ($50 x Duck)
  = form_for @adoption do |f|
    #duck-form
      #duck-form-image
        = image_tag "duck.gif", :class => "duck-form-image"
      = f.text_field :duck_count
      #duck-count ducks

    #duck-form-total
      Total: $0.00

    = f.submit "Continue", :class => "submit-duck-button blue-button-disabled"
    
.form
  %h1.center(style="margin-top: -20px; margin-bottom: 20px;") Sales Associate Form
  .header-slim(style="margin-top: 0px;")
    = image_tag "no1.gif", :class => "number"
    Personal Information

  = form_for @adoption do |f|
    .sales-adoption-form
      .left
        Name: <br/>
        = text_field_tag 'name', '', :style => "width: 260px;"
        %br/
        Phone: <br/>
        = text_field_tag 'phone', '', :style => "width: 260px;"
        %br/
        Email: <br/>
        = text_field_tag 'email', '', :style => "width: 260px;"
      .right
        Address: <br/>
        = text_field_tag 'address', '', :style => "width: 260px;"
        %br/
        City: <br/>
        = text_field_tag 'city', '', :style => "width: 260px;"
        %br/
        .left
          State: <br/>
          = text_field_tag 'state', '', :style => "width: 195px;"
        .left(style="padding-left: 10px;")
          Zip: <br/>
          = text_field_tag 'zip', '', :style => "width: 50px;"
        %br/
      .break &nbsp;

    .header-slim(style="margin-top: 0px;")
      = image_tag "no3.gif", :class => "number"
      Number of Ducks

    .sales-adoption-form
      .left
        Lone Ducks: <br/>
        = text_field_tag 'lone', '', :style => "width: 100px;"
      .left(style="padding-left: 10px;")
        Family of Ducks: <br/>
        = text_field_tag 'lone', '', :style => "width: 100px;"
      .left(style="padding-left: 10px;")
        Flock: <br/>
        = text_field_tag 'lone', '', :style => "width: 100px;"
      .left(style="padding-left: 10px;")
        OODLES: <br/>
        = text_field_tag 'lone', '', :style => "width: 100px;"

      .break &nbsp;
    .blue-button
      Submit