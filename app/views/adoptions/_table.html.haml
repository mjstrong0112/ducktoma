= will_paginate adoptions
%table#adoptions-table
  %tr
    %th= sortable_col "number", "Adoption Number"
    %th= sortable_col "duck_count", "Duck Count"
    %th= sortable_col "fee", "Fee"
    - if current_user.admin? || current_user.is?(:sales)
      %th= sortable_col "state", "Status"
      %th Actions
  = render :partial => 'adoptions/adoption_row', :collection => adoptions, :as => :adoption

= will_paginate adoptions