-#
  .alert{:style =>"text-align: center; font-weight: bold;"}
    Please click the "Continue to Checkout" button below, or your order will not be processed.

  .form(style="padding-top: 0px;")
    = render 'shared/title', :text => 'Confirm your order', :number => 2
    %h1 Your pending adoption number.

    #raffle-number= @adoption.adoption_number

    -#%h1 Duck numbers.
    -#- @adoption.ducks.each do |duck|
      .duck-number
        %div(style="width: 71px; text-align: center;")
          = duck.number

    .break &nbsp;

    #duck-form-total
      Total: #{number_to_currency(@adoption.dollar_fee)}


  .center(style="margin:auto; width: 340px;")
    -##print.blue-button.left(style="width: 80px; padding-left: 13px;")
      = link_to_function "Print", "javascript:print()", :html_options => { :id => "print" }

    - form_tag PAYPAL['url'] do
      = hidden_field_tag :cmd, "_s-xclick"
      = hidden_field_tag :encrypted, @adoption.paypal_encrypted(edit_adoption_url(@adoption), payment_notifications_url(:secret => PAYPAL['secret']))

      #print.blue-button
        = submit_tag "Continue to Checkout"

-#%h2 Loading...

- form_tag PAYPAL['url'], :id => 'paypal_form' do
  = hidden_field_tag :cmd, "_s-xclick"
  = hidden_field_tag :encrypted, @adoption.paypal_encrypted(edit_adoption_url(@adoption), payment_notifications_url(:secret => PAYPAL['secret']))

- content_for :javascripts do
  :javascript
    $(document).ready(function() {
      $("#paypal_form").submit();
    });